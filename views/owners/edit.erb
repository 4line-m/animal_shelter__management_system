<div class="owner-container">
  <h1>EDIT OWNER'S DETAILS:</h1>
  <div class="row">


<form method="post" action="/owners/<%= @owner.id %>">

  <label for="first-name-field">First Name:</label>
  <input
  type="text"
  name="first_name"
  id="first-name-field"
  value="<%= @owner.first_name %>"
  />

  <br>

  <label for="last-name-field">Last Name:</label>
  <input
  type="text"
  name="last_name"
  id="last-name-field"
  value="<%= @owner.last_name %>"
  />

  <br>

  <label for="address-field">Address:</label>
  <input type="text"
  name="address"
  id="address-field"
  value="<%= @owner.address %>"
  />

  <br>

  <label for="email-address-field">Email Address:</label>
  <input type="text"
  name="email_address"
  id="email-address-field"
  value="<%= @owner.email_address %>"
  />

  <br>

  <label for="phone-number-field">Phone Number:</label>
  <input type="text"
  name="phone_number"
  id="phone-number-field"
  value="<%= @owner.phone_number %>"
  />

  <br>

  <label for="image-field">Photo link:</label>
  <input
  type="text"
  name="image_url"
  id="image-field"
  value="<%= @owner.image_url %>"
  />

  <input type='submit' value="Save new details">
</form>

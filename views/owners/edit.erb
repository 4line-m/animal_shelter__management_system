<form method="post" action="/owners/<%= @owner.id %>">

  <label for="name-field">Name:</label>
  <input
  type="text"
  name="name"
  id="name-field"
  value="<%= @owner.name %>"
  />

  <br>

  <label for="address-field">Address:</label>
  <input type="text"
  name="address"
  id="address-field"
  value="<%= @owner.address %>"
  />

  <br>

  <label for="email-address-field">Email Address:</label>
  <input type="text"
  name="email_address"
  id="email-address-field"
  value="<%= @owner.email_address %>"
  />

  <br>

  <label for="phone-field">Phone Number:</label>
  <input type="text"
  name="phone_number"
  id="phone-number-field"
  value="<%= @owner.phone_number %>"
  />

  <br>

  <input type='submit' value="Save new details">
</form>
